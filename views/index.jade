	script(src='/js/vendors/jquery.min.js')				
	script(src='/js/vendors/jquery.parallax-1.1.3.min.js')				
	script(src='/js/vendors/modernizr.min.js')				
	script(src='/js/vendors/jquery.scrollTo.min.js')
	script(src='/js/vendors/localscroll.js')				
	script(src='/js/printoo.js')			