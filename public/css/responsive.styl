@media only screen and (min-width: 768px) and (max-width:959px)
	body
		margin 0
		padding 0

	nav
		height 175px
		.navegacion
			width 100%
			height 150px

			img
				width 35%

			div.brand, div.text-header, div.social-menu
				width 100%
			div.brand
				text-align center
			div.text-header
				padding-top 10px
				padding-bottom 10px
				background-color #9df41c
			div.social-menu
				text-align center
				margin-top -10px
				ul
					li:first-child
						display none

	.facebook-share, .twitter-share, .instagram-share
		font-size 40px
	.twitter-share
		background-position -47px 0
		&:hover
			background-position -47px 0
	.instagram-share
		background-position -94px 0
		&:hover
			background-position -94px 0
			
	.centrada
		width 90%

	#portada
		.centrada
			padding 0
			.center
				.godown
					margin-top -35px

	.texto-principal
		padding-top 35px
		font-size 35px
		line-height 110%
	.sub-principal
		line-height 115%
		font-size 60px

	.texto-portada
		font-size 35px
		left 0
		right 0
		top 0
		bottom 0
		margin-left auto
		margin-right auto
		margin-top auto
		margin-bottom auto

	.slide
		.info-features
			height 1450px
			div.container
				div.row-fluid
					div.center
						a.arrow-down
							margin-top 39%
		.info-portada-ultima
			div.container
				div.center
					h3.texto-portada
						font-size 27px

	.funciona
		width 80%

	.feature
		background-color transparent
		-webkit-border-radius 25px
		-moz-border-radius 25px
		-o-border-radius 25px
		-ms-border-radius 25px
		height 420px
		width 100%
		margin 0 auto
		padding 0
		margin-top -10px

		.info 
			p
				font-family 'Ubuntu'
				/*font-style italic*/
				font-size 20px
				line-height 120%
				margin-top -35px
	.contenedor
		width 30%
		height 250px
		margin 0 auto
		padding 0
		margin-top 10%

	#contact
		.container
			article
				div.row-fluid
					div.termino,div.email,div.social
						width 100%
					div.termino
						margin 0
						a.terminos
							margin 0 auto
							padding 0
							margin-top 0
							text-align center
							text-decoration underline
					div.email
						margin 0
						div.center
							margin-top -4px
					div.social
						margin-left 0
						margin-top -20px
					div.derecho
						margin 0 auto
						padding 0
						width 100%
						text-align center
						p
							margin 0 auto
							padding 0
							width 100%
					div.offset1
						margin-top 10px
						margin-bottom: 25px;
						div.span12
							h6
								display none
							p.correo
								margin-bottom 25px
								margin-top 10px
								margin-left 0
								background-color #9df41c
								color #000
								padding-top 10px
						h5
							display none

